<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/title_settings">
        <CheckBoxPreference
            android:key="pref_start_on_boot"
            android:summary="@string/summary_pref_start_on_boot"
            android:title="@string/title_pref_start_on_boot" />

        <CheckBoxPreference
            android:key="pref_per_app_proxy"
            android:summary="@string/summary_pref_per_app_proxy"
            android:title="@string/title_pref_per_app_proxy" />

        <MultiSelectListPreference
            android:entries="@array/entries_pref_auto_restart"
            android:entryValues="@array/values_pref_auto_restart"
            android:key="pref_auto_restart_set"
            android:title="@string/title_pref_auto_restart" />

        <CheckBoxPreference
            android:key="pref_foreground_service"
            android:summary="@string/summary_pref_foreground_service"
            android:title="@string/title_pref_foreground_service" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_about">
        <Preference
            android:key="pref_licenses"
            android:title="@string/notices_title" />

        <Preference
            android:key="pref_feedback"
            android:summary="@string/summary_pref_feedback"
            android:title="@string/title_pref_feedback">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/V2Ray-Android/Actinium/issues" />
        </Preference>

        <Preference
            android:key="pref_core_version"
            android:title="@string/title_pref_core_version">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/v2ray/v2ray-core" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>